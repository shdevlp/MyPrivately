<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="64dp"
    android:background="@color/red"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/cc_no_avatar_big" >
    </ImageView>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/blueviolet"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_gravity="left">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="2dp"
            android:background="@color/brown"
            android:text="@+id/user_name"
            android:textColor="#2b3033"
            android:textSize="16sp">
        </TextView>

        <TextView
            android:id="@+id/user_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="@+id/user_status"
            android:background="@color/bisque"
            android:textColor="#979797"
            android:textSize="12sp" >
        </TextView>

        <TextView
            android:id="@+id/user_last_message"
            android:gravity="top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="@+id/user_status"
            android:background="@color/azure"
            android:textColor="#979797"
            android:textSize="12sp" >
        </TextView>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/violet"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_unread_message_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:background="@drawable/cc_icon_new_massage"
            android:fontFamily="sans-serif-medium"
            android:text="@+id/user_unread_message_count"
            android:textColor="@color/white"
            android:textSize="12sp" >
        </TextView>

        <TextView
            android:id="@+id/user_last_time"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/burlywood"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:gravity="right|bottom"
            android:fontFamily="sans-serif-light"
            android:text="@+id/user_last_time"
            android:textColor="#2b3033"
            android:textSize="12sp" >
        </TextView>
    </LinearLayout>
</LinearLayout>