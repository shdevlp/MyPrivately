<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".activity.LoginActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/et_login"
        android:text="Номер телефона"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/et_password"
        android:layout_alignStart="@+id/et_password" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_use_password"
        android:layout_marginTop="72dp"
        android:src="@drawable/r_switch_button_off"
        android:layout_below="@+id/et_login"
        android:layout_alignRight="@+id/et_password"
        android:layout_alignEnd="@+id/et_password" />

    <EditText
        android:editable="false"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_password"
        android:text="12345"
        android:layout_marginTop="71dp"
        android:layout_below="@+id/bt_use_password"
        android:layout_alignLeft="@+id/et_password_retype"
        android:layout_alignStart="@+id/et_password_retype" />

    <EditText
        android:editable="false"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_password_retype"
        android:text="12345"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/et_password"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
